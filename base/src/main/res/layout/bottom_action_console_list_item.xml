<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_action_music_list_item_height">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_action_console_list_item_name"
        android:layout_width="@dimen/bottom_action_console_name_width"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textColor="@color/item_color"
        android:textSize="@dimen/text_size_14" />

    <SeekBar
        android:id="@+id/bottom_action_console_list_item_volume_progress_bar"
        style="@style/bottom_action_console_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/bottom_action_console_progress_margin"
        android:layout_marginEnd="@dimen/bottom_action_console_progress_margin"
        android:layout_toEndOf="@id/bottom_action_console_list_item_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_action_console_list_item_volume_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:textColor="@color/bottom_action_text_color_dark_gray"
        android:textSize="@dimen/text_size_14" />
</RelativeLayout>