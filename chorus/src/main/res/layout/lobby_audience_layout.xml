<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/chorus_audience_layout_icon_height">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/chorus_lobby_audience_icon"
        android:layout_width="@dimen/chorus_audience_layout_icon_width"
        android:layout_height="@dimen/chorus_audience_layout_icon_height"
        android:scaleType="fitXY"
        android:src="@drawable/ic_lobby_user"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/chorus_lobby_audience_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/chorus_lobby_audience_icon"
        android:layout_marginStart="@dimen/chorus_audience_layout_icon_margin"
        android:layout_alignTop="@id/chorus_lobby_audience_icon"
        android:layout_alignBottom="@id/chorus_lobby_audience_icon"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_12"
        android:textColor="@android:color/white"/>
</RelativeLayout>