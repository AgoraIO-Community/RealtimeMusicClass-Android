<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/password_input_dialog_width"
    android:layout_height="@dimen/password_input_dialog_height"
    android:background="@drawable/password_dialog_bg">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/password_input_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/password_input_dialog_close_content_margin"
        android:layout_marginStart="@dimen/password_input_dialog_close_content_margin"
        android:text="@string/password_dialog_title"
        android:textSize="@dimen/text_size_18"
        android:textColor="@color/purple_dark"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/password_input_close_btn"
        android:layout_width="@dimen/password_input_dialog_close_btn_size"
        android:layout_height="@dimen/password_input_dialog_close_btn_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/password_input_dialog_close_btn_margin"
        android:layout_marginEnd="@dimen/password_input_dialog_close_btn_margin"
        android:src="@drawable/ic_close_btn" />
    <RelativeLayout
        android:id="@+id/password_input_edit_area"
        android:layout_width="match_parent"
        android:layout_height="@dimen/password_input_dialog_edit_layout_height"
        android:layout_below="@id/password_input_title"
        android:layout_marginStart="@dimen/password_input_dialog_close_content_margin"
        android:layout_marginEnd="@dimen/password_input_dialog_close_content_margin"
        android:layout_marginTop="@dimen/password_input_dialog_edit_layout_margin_top"
        android:paddingStart="@dimen/password_input_dialog_edit_layout_padding_horizontal"
        android:paddingEnd="@dimen/password_input_dialog_edit_layout_padding_horizontal"
        android:background="@drawable/password_dialog_edit_bg">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/password_input_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/password_input_dialog_edit_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/password_input_edit_area_clear_btn"
            android:textAlignment="gravity"
            android:gravity="center_vertical"
            android:lines="1"
            android:inputType="textPassword"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/purple_dark"
            android:background="@null"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/password_input_edit_area_clear_btn"
            android:layout_width="@dimen/password_input_dialog_edit_clear_btn_size"
            android:layout_height="@dimen/password_input_dialog_edit_clear_btn_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/password_input_dialog_edit_layout_padding_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/ic_clear"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/password_input_confirm_btn"
        android:layout_width="@dimen/password_input_dialog_confirm_btn_width"
        android:layout_height="@dimen/password_input_dialog_confirm_btn_height"
        android:layout_below="@id/password_input_edit_area"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/password_input_dialog_confirm_btn_margin_top"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="@dimen/text_size_16"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="@string/enter_room"
        android:background="@drawable/password_dialog_btn_bg"/>
</RelativeLayout>